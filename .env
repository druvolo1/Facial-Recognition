# Database Configuration
DATABASE_URL=mariadb+aiomysql://app_user:testpass123@172.16.1.150:3306/facial_recognition

# Security - Generate a strong random secret key for JWT
SECRET_KEY=facial-recognition-secret-key-change-in-production

# Admin Account
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123!

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CodeProject.AI Configuration
CODEPROJECT_HOST=172.16.1.150
CODEPROJECT_PORT=32168

# Device Security Configuration
# How many days before device tokens are automatically rotated (refreshed)
DEVICE_TOKEN_ROTATION_DAYS=30

# How many minutes before registration codes expire (6-digit codes shown on device screen)
REGISTRATION_CODE_EXPIRATION_MINUTES=15
# Detection/Scan Configuration
# How long to retain detection records in minutes (for dashboard display)
SCAN_RETENTION_MINUTES=60

# Default confidence threshold for face recognition (0.0 to 1.0)
DEFAULT_CONFIDENCE_THRESHOLD=0.6

# Default minutes for "presence timeout" - how long after last scan to show as "currently there"
DEFAULT_PRESENCE_TIMEOUT_MINUTES=2

# Default seconds to wait before re-posting same person detection (cooldown)
DEFAULT_DETECTION_COOLDOWN_SECONDS=10
