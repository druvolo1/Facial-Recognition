<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
    xmlns:tizen="http://tizen.org/ns/widgets"
    id="http://yourdomain.com/FaceRecognitionMonitor"
    version="1.0.0">

    <tizen:application id="FaceRecMonitor.main" package="FaceRecMonitor" required_version="2.3"/>

    <content src="index.html"/>

    <name>Face Recognition Monitor</name>
    <description>Real-time face recognition monitoring for signage displays</description>

    <author email="your@email.com" href="http://yourdomain.com">
        Your Company Name
    </author>

    <!-- Standard Tizen privileges (no certificate required) -->
    <tizen:privilege name="http://tizen.org/privilege/internet"/>
    <tizen:privilege name="http://tizen.org/privilege/camera"/>
    <tizen:privilege name="http://tizen.org/privilege/mediacapture"/>

    <!-- Required features for camera/WebRTC -->
    <feature name="http://tizen.org/feature/camera"/>
    <feature name="http://tizen.org/feature/media.video_stream"/>

    <!-- Settings -->
    <tizen:setting screen-orientation="landscape" context-menu="disable"/>

    <access origin="*" subdomains="true"/>
</widget>
